<div id="resultados">

</div>


<div class="card ">
  <div class="card-header d-flex justify-content-start">
    <div class="m-0">  
      <%= link_to new_bookmark_path, {remote: true, class: "btn btn-danger text-left", id: "anadir-bookmark-btn"}  do %>
        <span class="fas fa-plus-square" ></span>
      <% end %>
    </div>
    <h1 class="h3 mx-5 text-gray-800 text-center">Bookmarks</h1>
  </div>
</div>


<div class="card m-2">
  <table class="table border-secondary"> 
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Type</th>
        <th class="text-center">Category</th>
        <th class="text-center">Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @bookmarks.each do |bookmark| %>
    
      <%= render 'bookmarks/bookmark', bookmark: bookmark %>
      
    <% end %>
    
    </tbody>
  </table>
</div>


<%= render 'modal_bookmark' %>